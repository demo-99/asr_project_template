{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "QuartzNet",
    "args": {
      "n_feats": 128,
      "model_config": [
        {"hidden": 256, "repeat": 1, "kernel": 33, "stride": 2, "dilation": 1, "dropout": 0.2, "residual": false, "tcs": true},
        {"hidden": 256, "repeat": 5, "kernel": 33, "stride": 1, "dilation": 1, "dropout": 0.2, "residual": true, "tcs": true},
        {"hidden": 256, "repeat": 5, "kernel": 39, "stride": 1, "dilation": 1, "dropout": 0.2, "residual": true, "tcs": true},
        {"hidden": 512, "repeat": 5, "kernel": 51, "stride": 1, "dilation": 1, "dropout": 0.2, "residual": true, "tcs": true},
        {"hidden": 512, "repeat": 5, "kernel": 63, "stride": 1, "dilation": 1, "dropout": 0.2, "residual": true, "tcs": true},
        {"hidden": 512, "repeat": 5, "kernel": 75, "stride": 1, "dilation": 1, "dropout": 0.2, "residual": true, "tcs": true},
        {"hidden": 512, "repeat": 1, "kernel": 87, "stride": 1, "dilation": 2, "dropout": 0.2, "residual": false, "tcs": true},
        {"hidden": 1024, "repeat": 1, "kernel": 1, "stride": 1, "dilation": 1, "dropout": 0.2, "residual": false, "tcs": false}
      ]
    }
  },
  "data": {
    "train": {
      "batch_size": 80,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 64,
      "num_workers": 2,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4,
      "weight_decay": 1e-4,
      "eps": 1e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 200,
      "gamma": 0.95
    }
  },
  "trainer": {
    "epochs": 10,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 500,
    "grad_norm_clip": 15
  }
}
